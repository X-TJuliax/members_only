<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
    <th colspan="2"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.user.username if user_signed_in? %></td>
      <td><%= link_to 'Show', posts_path %></td>
     
        
       
    </tr>
  <% end %>
</table>

<%= link_to "New post", new_post_path %>
<%= link_to 'Back', new_user_registration_path %>

